<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="GetData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/getDataButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" android:layout_marginStart="48dp" android:onClick="sampleData"/>
    <Button
            android:text="TrainModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/trainButton"
            app:layout_constraintStart_toEndOf="@+id/getDataButton"
            app:layout_constraintEnd_toStartOf="@+id/predictButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.423" android:onClick="trainMLModel"/>
    <Button
            android:text="Predict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/predictButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" android:layout_marginEnd="40dp"
            android:onClick="getPredictionProbabilities"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/trainButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" android:layout_marginStart="88dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/trainButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" android:layout_marginEnd="84dp"/>
    <EditText
            android:layout_width="351dp"
            android:layout_height="542dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/outputTextView_networkreceive"
            android:clickable="false" android:editable="false" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>