<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="clip_horizontal|center|clip_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dbActivityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk Database"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="User Table"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/dbScroll1"
                android:layout_width="204dp"
                android:layout_height="210dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dbText1"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:text="TextView" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="Location Table"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/dbScroll2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dbText2"
                        android:layout_width="488dp"
                        android:layout_height="266dp"
                        android:scrollIndicators="bottom"
                        android:scrollHorizontally="true"
                        android:text="TextView" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="Risk Table"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/dbScroll3"
                android:layout_width="362dp"
                android:layout_height="244dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dbText3"
                        android:layout_width="match_parent"
                        android:layout_height="221dp"
                        android:text="TextView" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>