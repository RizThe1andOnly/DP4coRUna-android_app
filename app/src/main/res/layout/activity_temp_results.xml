<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <EditText
            android:layout_width="312dp"
            android:layout_height="581dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/dataViewBox" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.576"/>
    <Button
            android:text="Sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/triggerSamplingButton"
            android:onClick="getAndStoreLocationData"
            tools:visibility="visible"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginStart="28dp"/>
    <Button
            android:text="Database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:id="@+id/showDataBaseData" android:onClick="onShowDataBaseDataButtonPress"/>
    <Button
            android:text="TrainML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/trainButton"
            app:layout_constraintEnd_toStartOf="@+id/showDataBaseData"
            app:layout_constraintStart_toEndOf="@+id/triggerSamplingButton"
            app:layout_constraintHorizontal_bias="0.537" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:onClick="trainModel"/>
</androidx.constraintlayout.widget.ConstraintLayout>